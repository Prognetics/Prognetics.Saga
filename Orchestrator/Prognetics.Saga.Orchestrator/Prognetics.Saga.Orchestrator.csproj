<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Copyright>Prognetics Sp. z o.o.</Copyright>
    <PackageProjectUrl>https://github.com/Prognetics/Prognetics.Saga</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Prognetics/Prognetics.Saga</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>saga; microservices; distributed systems; distributed transactions; prognetics;</PackageTags>
    <AssemblyVersion>$(AssemblyVersion)</AssemblyVersion>
    <Company>Prognetics Sp. z o.o.</Company>
    <Title>Prognetics.Saga.Orchestrator</Title>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="2.20.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Prognetics.Saga.Core\Prognetics.Saga.Core.csproj" />
    <ProjectReference Include="..\Prognetics.Saga.Orchestrator.Contract\Prognetics.Saga.Orchestrator.Contract.csproj" />
  </ItemGroup>

</Project>
